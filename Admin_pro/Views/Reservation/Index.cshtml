

@model IEnumerable<Admin_pro.Models.Reservation>


<div class="right_col" role="main">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Liste Des Reservation   :  </h2>




                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                    <li>
                        <!-- Large modal -->
                        <button type="button" class="btn btn-primary BtnAcheter" data-toggle="modal" data-url="/Reservation/Create">Nouveau</button>
                    </li>

                </ul>
                <div class="clearfix"></div>
            </div>


            <table id="datatable-buttons" class="table table-striped table-bordered">


                <thead>
                    <tr>
                        <th>Id  </th>
                        <th>Quantite </th>

                        <th> Description  </th>

                        <th> Date Reserver </th>
                        <th> Date Envoi</th>
                        
                        <th> Action</th>

                    </tr>
                </thead>

                <tbody>

                    @foreach (var rl in Model)
                    {
                        <tr>
                            <td> @rl.id_reservation</td>
                            <td>@rl.quantite</td>
                            <td>@rl.description</td>
                            <td>@rl.datereservation</td>
                            <td> @rl.date_envoi</td>
                            


                            <td>

                                <button class="btn btn-primary btn-xs Btnreserv" data-toggle="modal" data-url="/Reservation/Create?id_reservation=@rl.id_reservation"><i class="fa fa-folder"></i> View </button>
                                <button class="btn btn-info btn-xs  Btnreserv" data-toggle="modal" data-url="/Reservation/Create?id_reservation=@rl.id_reservation"><i class="fa fa-pencil"></i> Edit </button>
                                <button class="btn btn-danger btn-xs  Btnreserv" data-toggle="modal" data-url="/Reservation/Delete?id_reservation=@rl.id_reservation"><i class="fa fa-trash-o"></i> Delete </button>

                            </td>

                        </tr> }
                </tbody>




            </table>



        </div>
    </div>
</div>


<span id="Modal_Crud">
</span>

<script>
    $('.Btnreserv').click(function () {
        var url = $(this).attr('data-url');
        $('#Modal_Crud').html('');
        $.get(url, function (data) {

            $('#Modal_Crud').html(data);
            $('#CP').modal('show');
        });
    });
</script>





