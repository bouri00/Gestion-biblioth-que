
@model Admin_pro.ViewModels.CommanderViewModel

@{
    Layout = null;
}


<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true" id="MymodalCP">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">  Liste Commande    :</h4>
            </div>

            @using (Html.BeginForm("Create", "Commander", FormMethod.Post, new { enctype = "multipart/form-data", id = "demo-form2", @class = "form-horizontal form-label-left" }))
            {

                <div class="modal-body">

                    @Html.HiddenFor(x => x.Idcom)

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                           Prix : <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(x => x.Prix, new { @placeholder = "Prix", Type = "varchar", @class = "form-control col-md-7 col-xs-12", @required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                                Quantite  : <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(x => x.quantite, new { @placeholder = "Quantite", Type = "number", @class = "form-control col-md-7 col-xs-12", @required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            Remise  : <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(x => x.Remise, new { @placeholder = "Remise", Type = "varchar", @class = "form-control col-md-7 col-xs-12", @required = "required" })
                        </div>

                    </div>

                    <div class="form-group">
                        <labl class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                          Date Envoi : <span class="required">*</span>
                        </labl>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @*@Html.DropDownList("id_type", (SelectList)Admin_pro.Models.BD_Listes.typeouvrage, "Type1", new { @class = "form-control" })*@
                            @Html.TextBoxFor(x => x.date_envoi, new { @placeholder = "DateEnvoi", Type = "date", @class = "form-control col-md-7 col-xs-12", @required = "required" })


                        </div>
                    </div>
                    <div class="form-group">
                        <labl class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                          Destinataire : <span class="required">*</span>
                        </labl>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @*@Html.DropDownList("id_type", (SelectList)Admin_pro.Models.BD_Listes.typeouvrage, "Type1", new { @class = "form-control" })*@
                            @Html.TextBoxFor(x => x.destinataire, new { @placeholder = "destinataire", Type = "varchar", @class = "form-control col-md-7 col-xs-12", @required = "required" })


                        </div>
                    </div>



                    <div class="form-group">
                        <labl class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                           Pays Livraison : <span class="required">*</span>
                        </labl>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @*@Html.DropDownList("id_type", (SelectList)Admin_pro.Models.BD_Listes.typeouvrage, "Type1", new { @class = "form-control" })*@
                            @Html.TextBoxFor(x =>x.pays_livraison, new { @placeholder = "pays", Type = "varchar", @class = "form-control col-md-7 col-xs-12", @required = "required" })


                        </div>
                    </div>
                    <div class="form-group">
                        <labl class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                           Ville Livraison : <span class="required">*</span>
                        </labl>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @*@Html.DropDownList("id_type", (SelectList)Admin_pro.Models.BD_Listes.typeouvrage, "Type1", new { @class = "form-control" })*@
                            @Html.TextBoxFor(x => x.ville_livraison, new { @placeholder = "ville", Type = "varchar", @class = "form-control col-md-7 col-xs-12", @required = "required" })


                        </div>
                    </div>
                    <div class="form-group">
                        <labl class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                           Total  : <span class="required">*</span>
                        </labl>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @*@Html.DropDownList("id_type", (SelectList)Admin_pro.Models.BD_Listes.typeouvrage, "Type1", new { @class = "form-control" })*@
                            @Html.TextBoxFor(x => x.date_envoi, new { @placeholder = "DateEnvoi", Type = "number", @class = "form-control col-md-7 col-xs-12", @required = "required" })


                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>

                    </div>
                </div>
            }
        </div>
    </div>
</div>
