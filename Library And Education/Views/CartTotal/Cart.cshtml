



@model IEnumerable<Library_And_Education.Models.Commander>

<!doctype html>

<html>

<head>

    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Shopping Cart - Universum</title>


    <!-- Style CSS -->

    <link rel="stylesheet" type="text/css" href="~/UNIVERSUM/itcthemes.com/demo/Universum/html/style.css">

    <!-- Responsive CSS -->

    <link rel="stylesheet" type="text/css" href="~/UNIVERSUM/itcthemes.com/demo/Universum/html/css/responsive.css">

    <!-- Favicon -->

    <link rel="shortcut icon" type="image/png" href="~/UNIVERSUM/itcthemes.com/demo/Universum/html/images/assets/favicon.png" />



</head>
<body>
@foreach (var pi in Model)
            {



    <div class="col-md-4">

        <div class="cart-collaterals">

         
                <h2>Cart Totals</h2>

                <table>

                    <tbody>

                        <tr class="cart-subtotal">

                            <th>Subtotal:</th>

                            <td><span class="amount">$ @pi.Prix</span></td>

                </tr>

                <tr class="shipping">

                    <th>Shipping:</th>

                    <td>

                        <p>There are no shipping methods available. Please double check your address, or contact us if you need any help.</p>


                        <a class="shipping-calculator-button" href="#">Calculate Shipping</a>


                        <form action="#" method="get" accept-charset="utf-8">

                            <div class="selectbox">

                                <select name="country">

                                    <option>Select a country...</option>

                                    <option value="vietnam">Vietnam</option>

                                    <option value="us">US</option>

                                    <option value="uk">UK</option>

                                </select>

                            </div>


                            <input type="text" placeholder="State / country">


                            <input type="text" placeholder="Post Code / Zip">


                            <input type="button" value="Update Totals" class="button primary rounded">

                        </form>

                    </td>

                </tr>


                <tr class="order-total">

                    <th>Total</th>

                    <td><span class="amount">$229.00</span></td>

                </tr>

            </tbody>

        </table>

        <a class="button large full rounded proceed-checkout" href="#">Proceed to Checkout <i class="fa fa-long-arrow-right"></i></a>

         
        </div><!-- .cart-collaterals -->

   </div>
}
    </body>
</html>