</head>
<body class="hold-transition login-page">

    @using (Html.BeginForm("login", "Authentifier", FormMethod.Post,new { id = "test" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)


        <div class="login-box">
            <div class="login-logo">
                <a href="#"> Connexion    : </a>   <h3> Pour accéder à ma bibliothèque et à mon profil</h3>
            </div>
            <!-- /.login-logo -->
            <div class="login-box-body">
                <p class="login-box-msg">Compte d'acces .</p>


                <div class="form-group has-feedback">




                    <table>
                        <tr>
                            <td>  Login  :</td>

                            <td>  @Html.TextBoxFor(a => a.User_Name)  </td>
                            <td> @Html.ValidationMessageFor(a => a.User_Name)</td>
                        </tr>


                        <tr>
                            <td> Password : </td>
                            <td> @Html.TextBoxFor(b=>b.Password_cle)</td>
                            <td>@Html.ValidationMessageFor(b=>b.Password_cle)</td>
                        </tr>



                        @*<input type="email" class="form-control"  required="required" placeholder="Email">
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>*@
                    </table>   <br /><br />
                </div>


                @*<input type="password" class="form-control"  required="required" placeholder="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>*@



                <div class="row">
                    @*<div class="col-xs-8">
                            <div class="checkbox icheck">
                                <label>
                                    <input type="checkbox"> Remember Me
                                </label>
                            </div>
                        </div>*@
                    <!-- /.col -->
                    <div class="col-xs-4">

                        <button type="submit" href="~/Ouvrage2/ouvrage2" class="btn btn-primary btn-block btn-flat">Connecter</button>

                    </div>
                    <!-- /.col -->
                </div>

                <div class="social-auth-links text-center">
                    <p>Ou bien Connecter Par  : -</p>
                    <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                        <i class="fa fa-facebook"></i> Sign in using
                        Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                        <i class="fa fa-google-plus"></i> Sign in using
                        Google+
                    </a>
                </div>
                <!-- /.social-auth-links -->
                @*<a href="#">I forgot my password</a><br>*@
                <a href="~/Connexion/compte" class="text-center">Creation Nouveau Compte</a>
            </div>
            <!-- /.login-box-body -->
        </div>
    <!-- /.login-box -->
    <!-- jQuery 2.2.3 -->

    <!-- Bootstrap 3.3.6 -->
        <script src="~/AdminLTE-master/bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
        <script src="~/AdminLTE-master/plugins/iCheck/icheck.min.js"></script>
        <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.0/jquery.validate.min.js"></script>
        <script>
  $(function () {
    //$('input').iCheck({
    //  checkboxClass: 'icheckbox_square-blue',
    //  radioClass: 'iradio_square-blue',
    //  increaseArea: '20%' // optional
    //});





  });

  @*$.validator.addMethod("match", function (value, element) {
      return this.optional(element) || "[A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,}".test(value);
  }, "Email incorrect");*@

  $("#test").validate({
      // Specify validation rules
      rules: {
          // The key name on the left side is the name attribute
          // of an input field. Validation rules are defined
          // on the right side
          User_Name: {
              required: true,
              match: true
          },
          Password_cle: {
              required: true
          },

      },
      // Specify validation error messages
      messages: {
          User_Name: "Please enter your User Name.",
          Password_cle: "Please enter your Password.",
      },
      // Make sure the form is submitted to the destination defined
      // in the "action" attribute of the form when valid

  });

        </script>
    }
</body>
</html>
